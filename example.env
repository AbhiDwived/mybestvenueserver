# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Configuration
# Include connection options for better reliability and security
MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/wedding_platform?retryWrites=true&w=majority&authSource=admin&connectTimeoutMS=30000

# JWT Configuration
# Example of strong secrets (replace with your own generated values)
JWT_SECRET=f7a8b9c0d1e2f3a4b5c6d7e8f9a0b1c2d3e4f5a6b7c8d9e0f1a2b3c4d5e6f7
JWT_REFRESH_SECRET=a1b2c3d4e5f6a7b8c9d0e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# Email Configuration (Gmail)
EMAIL_USER=your.email@gmail.com
EMAIL_PASS=abcd efgh ijkl mnop  # 16-character Gmail App Password

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your.email@gmail.com
SMTP_PASS=abcd efgh ijkl mnop  # Same as EMAIL_PASS

# ImageKit Configuration
IMAGEKIT_PUBLIC_KEY=public_xxxxxxxxxxxxxxxxxxxx
IMAGEKIT_PRIVATE_KEY=private_xxxxxxxxxxxxxxxxxxxx
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your-endpoint

# Frontend URLs (for CORS)
FRONTEND_URL=https://mybestvenue.com
ADDITIONAL_FRONTEND_URL=https://www.mybestvenue.com
DEV_FRONTEND_URL=http://localhost:5173

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=15           # Time window in minutes
RATE_LIMIT_MAX_REQUESTS=100    # Maximum requests per window
AUTH_RATE_LIMIT_WINDOW=60      # Auth rate limit window in minutes
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5 # Maximum login attempts per window

# File Upload Configuration
MAX_FILE_SIZE=10485760        # 10MB in bytes

# Security Configuration
ENABLE_HTTPS=true
COOKIE_SECRET=a1b2c3d4e5f6a7b8c9d0e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9f0

# Optional: Logging Configuration
LOG_LEVEL=error               # Options: error, warn, info, debug
ENABLE_REQUEST_LOGGING=true

# Optional: Cache Configuration
ENABLE_RESPONSE_CACHING=true
CACHE_DURATION=3600          # Cache duration in seconds

# Optional: Session Configuration
SESSION_DURATION=86400       # Session duration in seconds (24 hours)

# Comments explaining the purpose of each variable:
# PORT: The port number the server will listen on
# NODE_ENV: The environment the application is running in (development, production, etc.)
# MONGO_URI: MongoDB connection string with security options
# JWT_SECRET: Secret key for signing JWTs (32+ random characters)
# JWT_REFRESH_SECRET: Secret key for refresh tokens (different from JWT_SECRET)
# EMAIL_USER: Gmail address for sending emails
# EMAIL_PASS: Gmail App Password (NOT your regular Gmail password)
# IMAGEKIT_*: ImageKit credentials for image handling
# FRONTEND_URL: Production frontend URL for CORS
# RATE_LIMIT_*: Rate limiting configuration to prevent abuse
# MAX_FILE_SIZE: Maximum allowed file upload size
# COOKIE_SECRET: Secret for signing cookies
# LOG_LEVEL: Determines what gets logged
# CACHE_DURATION: How long to cache responses
# SESSION_DURATION: How long user sessions last 